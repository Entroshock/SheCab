<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="600dp"
        android:layout_height="200dp"
        android:layout_marginTop="550dp"
        android:background="#FFFFFF">


        <ImageView
            android:id="@+id/passengerImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"

            android:src="@drawable/driverr_removebg_preview" />

        <TextView
            android:id="@+id/passengerNameTextView"
            android:layout_width="187dp"
            android:layout_height="44dp"
            android:layout_below="@id/passengerImageView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="11dp"
            android:text="*Passenger's Name*"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/passengerDestination"
            android:layout_width="187dp"
            android:layout_height="44dp"
            android:layout_below="@id/passengerImageView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="33dp"
            android:layout_marginRight="30dp"
            android:text="*Passenger's destination*"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <Button
            android:id="@+id/confirmButton"
            android:layout_width="100dp"
            android:layout_height="61dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="100dp"
            android:backgroundTint="@color/pink"
            android:text="Confirm trip"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

</RelativeLayout>
